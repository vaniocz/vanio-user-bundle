<?xml version="1.0"?>
<routes xmlns="http://besim.pl/schema/i18n_routing" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://besim.pl/schema/i18n_routing http://besim.pl/schema/i18n_routing/routing-1.0.xsd">
    <route id="fos_user_profile_show" path="/" methods="GET">
        <default key="_controller">FOSUserBundle:Profile:show</default>
    </route>

    <route id="fos_user_profile_edit" methods="GET POST">
        <locale key="en">/edit</locale>
        <locale key="cs">/editace</locale>
        <locale key="ru">/redaktirovat</locale>
        <default key="_controller">FOSUserBundle:Profile:edit</default>
    </route>
</routes>
