<?xml version="1.0"?>
<routes xmlns="http://besim.pl/schema/i18n_routing" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://besim.pl/schema/i18n_routing http://besim.pl/schema/i18n_routing/routing-1.0.xsd">
    <route id="hwi_oauth_connect_registration">
        <locale key="en">/login/redirect/{service}</locale>
        <locale key="de">/einloggen/umleiten/{service}</locale>
        <locale key="cs">/prihlaseni/presmerovat/{service}</locale>
        <locale key="sk">/prihlasenie/presmerovat/{service}</locale>
        <locale key="ru">/avtorizovatsya/pereadresovyvat/{service}</locale>
        <default key="_controller">VanioUserBundle:Connect:redirectToService</default>
    </route>

    <route id="hwi_oauth_connect_service">
        <locale key="en">/login/connect/{service}</locale>
        <locale key="de">/einloggen/verbinden/{service}</locale>
        <locale key="cs">/prihlaseni/propojit/{service}</locale>
        <locale key="sk">/prihlasenie/prepojit/{service}</locale>
        <locale key="ru">/avtorizovatsya/soyedinyat/{service}</locale>
        <default key="_controller">VanioUserBundle:Connect:connectService</default>
    </route>

    <route id="hwi_oauth_disconnect">
        <locale key="en">/login/disconnect/{service}</locale>
        <locale key="de">/einloggen/trennen/{service}</locale>
        <locale key="cs">/prihlaseni/odpojit/{service}</locale>
        <locale key="sk">/prihlasenie/odpojit/{service}</locale>
        <locale key="ru">/avtorizovatsya/otklyuchat/{service}</locale>
        <default key="_controller">VanioUserBundle:Connect:disconnect</default>
    </route>

    <route id="hwi_oauth_connect_registration">
        <locale key="en">/registration/{key}</locale>
        <locale key="de">/anmeldung/{key}</locale>
        <locale key="cs">/registrace/{key}</locale>
        <locale key="sk">/registracia/{key}</locale>
        <locale key="ru">/registratsiya/{key}</locale>
        <default key="_controller">VanioUserBundle:Connect:registration</default>
    </route>

    <route id="hwi_oauth_connections">
        <locale key="en">/my-profile/account-connections</locale>
        <locale key="de">/mein-profil/verknupfte-konten</locale>
        <locale key="cs">/muj-profil/propojeni-uctu</locale>
        <locale key="sk">/moj-profil/prepojenie-uctu</locale>
        <locale key="ru">/moy-profayl/soyedinyat-schet</locale>
        <default key="_controller">VanioUserBundle:Connect:connections</default>
    </route>

    <import resource="." type="resource_owners">
        <locale key="en">/login-check</locale>
        <locale key="de">/login-uberprufung</locale>
        <locale key="cs">/kontrola-prihlaseni</locale>
        <locale key="sk">/kontrola-prihlasenie</locale>
        <locale key="ru">/proverit-avtorizovatsya</locale>
    </import>
</routes>
