<?xml version="1.0"?>
<routes xmlns="http://besim.pl/schema/i18n_routing" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://besim.pl/schema/i18n_routing http://besim.pl/schema/i18n_routing/routing-1.0.xsd">
    <route id="fos_user_resetting_request" path="/" methods="GET">
        <default key="_controller">FOSUserBundle:Resetting:request</default>
    </route>

    <route id="fos_user_resetting_send_email" methods="POST">
        <locale key="en">/send-email</locale>
        <locale key="cs">/odeslat-email</locale>
        <locale key="ru">/poslat-email</locale>
        <default key="_controller">FOSUserBundle:Resetting:sendEmail</default>
    </route>

    <route id="fos_user_resetting_check_email" path="/check-email" methods="GET">
        <locale key="en">/check-email</locale>
        <locale key="cs">/kontrola-emailu</locale>
        <locale key="ru">/proverit-email</locale>
        <default key="_controller">FOSUserBundle:Resetting:checkEmail</default>
    </route>

    <route id="fos_user_resetting_reset" path="/reset/{token}" methods="GET POST">
        <locale key="en">/reset/{token}</locale>
        <locale key="cs">/resetovat/{token}</locale>
        <locale key="ru">/sbros/{token}</locale>
        <default key="_controller">FOSUserBundle:Resetting:reset</default>
    </route>
</routes>
