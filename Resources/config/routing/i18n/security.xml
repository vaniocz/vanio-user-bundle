<?xml version="1.0"?>
<routes xmlns="http://symfony.com/schema/routing" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">
    <route id="fos_user_security_login" methods="GET">
        <default key="_controller">fos_user.security.controller:loginAction</default>
        <path locale="en">/login</path>
        <path locale="de">/einloggen</path>
        <path locale="cs">/prihlaseni</path>
        <path locale="sk">/prihlasenie</path>
        <path locale="ru">/avtorizovatsya</path>
        <path locale="pl">/logowanie</path>
    </route>

    <route id="fos_user_security_check" methods="POST">
        <default key="_controller">fos_user.security.controller:checkAction</default>
        <path locale="en">/login</path>
        <path locale="de">/einloggen</path>
        <path locale="cs">/prihlaseni</path>
        <path locale="sk">/prihlasenie</path>
        <path locale="ru">/avtorizovatsya</path>
        <path locale="pl">/logowanie</path>
    </route>

    <route id="fos_user_security_logout" methods="GET POST">
        <default key="_controller">fos_user.security.controller:logoutAction</default>
        <path locale="en">/logout</path>
        <path locale="de">/abstimmen</path>
        <path locale="cs">/odhlasit</path>
        <path locale="sk">/odhlasit-sa</path>
        <path locale="ru">/vyyti</path>
        <path locale="pl">/wyloguj</path>
    </route>
</routes>
