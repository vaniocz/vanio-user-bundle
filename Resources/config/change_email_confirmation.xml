<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <parameters>
        <parameter key="vanio_user.listener.email_change_confirmation_listener.class">Vanio\UserBundle\Security\EmailChangeConfirmationListener</parameter>
    </parameters>

    <services>
        <service id="vanio_user.listener.email_change_confirmation_listener" class="%vanio_user.listener.email_change_confirmation_listener.class%">
            <argument type="service" id="fos_user.util.token_generator" />
            <argument type="service" id="fos_user.mailer" />
            <argument type="service" id="session" />
            <tag name="kernel.event_subscriber" />
        </service>
    </services>
</container>
