{% trans_default_domain 'HWIOAuthBundle' %}

{% block header %}
    <h3>{{ 'header.connecting'|trans }}</h3>
    <p>{{ 'connect.confirm.text'|trans({'%service%': service|trans, '%name%': userInformation.realName}) }}</p>
{% endblock %}

{% block profilePicture %}
    {% if userInformation.profilePicture is not empty %}
        <img src="{{ userInformation.profilePicture }}">
    {% endif %}
{% endblock %}

{% block form %}
    {{ form_start(form, {action: path('hwi_oauth_connect_service', {service: service, key: key}), attr: formAttributes ?? {class: 'hwi_oauth_registration_register'}}) }}
        {% block formFields %}
            {{ form_widget(form) }}

            <div class="form-buttons form-group">
                <button class="btn btn-primary">{{ 'connect.confirm.submit'|trans }}</button>
                <a class="btn btn-default" href="{{ path('hwi_oauth_connections') }}">{{ 'connect.confirm.cancel'|trans }}</a>
            </div>
        {% endblock %}
    {{ form_end(form) }}
{% endblock %}
