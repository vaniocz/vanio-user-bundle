{% trans_default_domain 'FOSUserBundle' %}

{% block form %}
    {{ form_start(form, {attr: formAttributes ?? {class: 'fos_user_profile_edit'}}) }}
        {% block formFields %}
            {% if form.name is defined %}
                {{ form_row(form.name) }}
            {% endif %}

            {{ form_widget(form) }}
            <div class="form-buttons form-group">
                <button class="btn btn-primary">{{ 'profile.edit.submit'|trans }}</button>
            </div>
        {% endblock %}
    {{ form_end(form) }}
{% endblock %}
