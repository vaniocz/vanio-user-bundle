{% if form.vars.submitted %}
    {{ response_status(422) }}
    {{ {code: 422, message: 'Unprocessable Entity', errors: form_error_messages(form)}|serialize(app.request.requestFormat)|raw }}
{% elseif app.request.isMethod(form.vars.method) %}
    {{ response_status(422) }}
    {{ {code: 422, message: 'Unprocessable Entity'}|serialize(app.request.requestFormat)|raw }}
{% else %}
    {{ response_status(405) }}
    {{ {code: 405, message: 'Method Not Allowed'}|serialize(app.request.requestFormat)|raw }}
{% endif %}
