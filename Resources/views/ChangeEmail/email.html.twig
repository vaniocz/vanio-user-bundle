{% extends '@VanioUser/email.html.twig' %}

{% trans_default_domain 'FOSUserBundle' %}

{% block subject %}
    {{ 'change_email.email.subject'|trans({'%username%': user.username}) }}
{% endblock %}

{% block content %}
    {% set apiConfirmationUrl = app.request.get('confirmationUrl') %}

    {% if apiConfirmationUrl and is_trusted_api_url(apiConfirmationUrl) %}
        {% set confirmationUrl = apiConfirmationUrl|with_appended_query({confirmationUrl: confirmationUrl}) %}
    {% endif %}

    {{ 'change_email.email.message'|trans({'%username%': user.username, '%confirmationUrl%': confirmationUrl})|raw }}
{% endblock %}
