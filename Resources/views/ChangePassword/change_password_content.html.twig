{% trans_default_domain 'FOSUserBundle' %}

{% block form %}
    {{ form_start(form, {attr: formAttributes ?? {class: 'fos_user_change_password'}}) }}
        {% block formFields %}
            {% if form.currentPassword is defined %}
                {{ form_row(form.currentPassword) }}
            {% endif %}

            {{ form_rest(form) }}

            <div class="form-buttons form-group">
                <button class="btn btn-primary">{{ 'change_password.submit'|trans }}</button>
            </div>
        {% endblock %}
    {{ form_end(form) }}
{% endblock %}
