{% block subject %}{% endblock %}

{% block sender %}
    {% for email, name in from %}
        {{ name }} <{{ email }}>
    {% endfor %}
{% endblock %}

{% block from %}{{ block('sender') }}{% endblock %}
{% block title %}{{ block('subject') }}{% endblock %}
{% block content_type %}text/html{% endblock %}

{% block body_text %}
    {{ block('body_html')|html_to_text|raw }}
{% endblock %}

{% block body_html %}
    {% block content %}
        {% block header %}{% endblock %}
        {% block body %}{% endblock %}
    {% endblock %}
{% endblock %}
